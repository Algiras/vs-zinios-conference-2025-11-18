{
  "name": "autonomous-development-workflows",
  "version": "1.0.0",
  "description": "Presentation on Autonomous Development Workflows",
  "scripts": {
    "dev": "npx @marp-team/marp-cli --no-stdin -w -s --html --theme themes/rose-pine-dawn.css slides/",
    "dev:dark": "npx @marp-team/marp-cli --no-stdin -w -s --html --theme themes/rose-pine-moon.css slides/",
    "build": "node scripts/preprocess-for-pdf.js slides/presentation.md && node scripts/build-html.js",
    "build:original": "npx @marp-team/marp-cli --no-stdin --html -o slides/presentation.original.html slides/presentation.md",
    "build:dist": "node scripts/build-dist.js",
    "export": "node scripts/export-with-validation.js",
    "export:pptx": "node scripts/export-with-validation.js --skip-images",
    "export:images": "node scripts/export-with-validation.js --skip-pptx",
    "export:pdf": "node scripts/export-pdf.js",
    "export:images:only": "node scripts/slides-to-image.js",
    "export:images:combined": "node scripts/slides-to-image.js --stitch",
    "export:themes": "node scripts/export-both-themes.js",
    "preview": "npx @marp-team/marp-cli --no-stdin -s --html slides/",
    "lint:mermaid": "md-mermaid-lint slides/presentation.md",
    "lint:mermaid:all": "md-mermaid-lint slides/**/*.md docs/**/*.md",
    "chart:generate": "node scripts/generate-charts.js"
  },
  "keywords": [
    "marp",
    "presentation",
    "autonomous-workflows",
    "ai-agents"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@kazumatu981/markdown-it-kroki": "^1.3.6",
    "@kazumatu981/markdown-it-nested-container": "^1.1.0",
    "@marp-team/marp-cli": "^4.2.3",
    "@marp-team/marp-core": "^3.9.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "md-mermaid-lint": "^1.0.1"
  },
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "qrcode": "^1.5.4"
  }
}
